#include <stdio.h>
#include <conio.h>

int recursiveAdd(int, int);

int main()
{
	int n, s;

	clrscr();
	printf("Enter number: ");
	scanf("%d", &n);
	s = (n%2==0) ? 2 : 1;
	printf("Ans: %d", recursiveAdd(n, s));
	getch();
	return 0;
}

int recursiveAdd(int n, int s)
{       int res;

	res = 0;
	if(n == 0)
		return n;
	return res + recursiveAdd(n-s, s);
}